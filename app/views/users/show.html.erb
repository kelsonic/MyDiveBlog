<h1 class="text-center">Welcome to <%= @user.username %>'s page</h1>

<div class="row">
  <div class="col-md-4 col-md-offset-4 text-center">
    <%= gravatar_for @user, size: 150 %>
  </div>
</div>

<div class="col-md-4 col-md-offset-4 well text-center">
  <h2><%= @user.username %>'s Articles</h2>
  <% if logged_in? %>
    <%= link_to "Send Message", "#", class: "btn btn-success start-conversation",
                                "data-sid" => current_user.id, "data-rip" => @user.id %>
  <% end %>
</div>

<div class="text-center">
  <%= will_paginate @user_articles %>
</div>

<%= render 'articles/article', obj: @user_articles %>

<div class="text-center">
  <%= will_paginate @user_articles %>
</div>